  "bugs": {
    "url": "https://github.com/magarcia/magarcia.io/issues"
  },
  "dependencies": {
    "gatsby": "^2.15.28",
    "gatsby-plugin-feed": "^2.3.15",
    "gatsby-plugin-google-analytics": "^2.1.19",
    "gatsby-plugin-i18n": "^1.0.1",
    "gatsby-plugin-manifest": "^2.2.18",
    "gatsby-plugin-offline": "^2.2.6",
    "gatsby-plugin-offline": "^3.0.7",
    "gatsby-plugin-react-helmet": "^3.1.10",
    "gatsby-plugin-sharp": "^2.2.20",
    "gatsby-plugin-sitemap": "^2.2.16",
    "gatsby-plugin-typography": "^2.3.10",
    "gatsby-remark-autolink-headers": "^2.1.13",
    "gatsby-remark-copy-linked-files": "^2.1.20",
    "gatsby-remark-images": "^3.1.25",
    "gatsby-remark-prismjs": "^3.3.16",
    "gatsby-remark-responsive-iframe": "^2.2.17",
    "gatsby-remark-smartypants": "^2.1.11",
    "gatsby-source-filesystem": "^2.1.26",
    "gatsby-transformer-json": "^2.2.9",
    "gatsby-transformer-remark": "^2.6.24",
    "gatsby-transformer-sharp": "^2.2.19",
    "gray-percentage": "^2.0.0",
    "lint-staged": "^9.4.0",
    "lodash": "^4.17.15",
    "prismjs": "^1.17.1",
    "prop-types": "^15.7.2",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-preset-gatsby": "^0.2.17",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lighthouse-ci": "git+https://github.com/ebidel/lighthouse-ci.git",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.10.2"
  },
  "homepage": "https://magarcia.io",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "gatsby develop",
    "lh": "lighthouse-ci",
    "dry": "npm build && cd public && npx static-server",
    "format": "prettier --write '{gatsby-*.js,src/**/*.{js,jsx,json,css}}'",
    "prelint": "npm run format",
    "lint:only": "eslint --ext .js,.jsx src",
    "lint": "npm run lint:only",
    "pretest": "npm run lint",
    "test": "jest",
    "test:ci": "jest",
    "coverage": "jest --coverage",
    "coverage:ci": "jest --coverage && cat ./coverage/lcov.info",
    "prebuild": "npm run test",
    "build:only": "rm -rf public/* && rm -rf .cache && gatsby build",
    "build": "npm run build:only",
    "build:ci": "npm run build:only",
    "predeploy": "npm run build",
    "deploy:only": "firebase deploy",
    "deploy": "npm run deploy:only",
    "deploy:ci": "firebase deploy --token=${FIREBASE_API_TOKEN} --project magarciaio"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{gatsby-*.js,src/**/*.{js,jsx,json,css}}": [
      "npm run format",
      "git add"
    ]
  }
}
